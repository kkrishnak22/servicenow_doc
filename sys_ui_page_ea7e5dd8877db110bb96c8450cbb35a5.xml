<client_script><![CDATA[function submitCancel() {
    GlideDialogWindow.get().destroy();
    return false;
}

function submitChanges() {
    var permissiontypechoice = gel('permissionTypevalue').value;
    if (permissiontypechoice.length < 1) {
        document.getElementById('permissionType_error').style.backgroundColor = "#FFEBE8";
        document.getElementById('permissionType_error').style.display = "block";
        return false;
    } else document.getElementById('permissionType_error').style.display = "none";

    return true;

}]]></client_script>
