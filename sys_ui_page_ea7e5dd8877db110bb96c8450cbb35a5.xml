  <g:evaluate var="jvar_group" jelly="true">
var choiceRecord = new GlideRecord("sys_db_object");
choiceRecord.addEncodedQuery("super_class=2b501cb8876dbd10bb96c8450cbb3585");       //Parent Permission table sys_id to get all the child tables in the choices.
